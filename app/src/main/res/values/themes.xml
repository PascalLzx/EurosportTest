<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eurosp0rt" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_eurosport</item>
        <item name="colorPrimaryVariant">@color/blue_eurosport</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_eurosport</item>
        <item name="colorSecondaryVariant">@color/blue_eurosport</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Eurosp0rt.TitleSportName">
        <item name="android:textSize">@dimen/text_size_sport_name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/layout_bg_sport_name</item>
        <item name="textAllCaps">true</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginStart">@dimen/space_8dp</item>
    </style>

    <style name="Theme.Eurosp0rt.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>
</resources>